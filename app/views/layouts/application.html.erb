<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
      <title>Dealkat Corporate</title>
      <!-- base href="http://website.zone/shared/" -->
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
      <meta name="description" content="">
      <meta name="keywords" content="">
      <link rel="icon"  type="image/png" href='<%= image_path '/images/favicon.ico' %>' />
      <link rel="shortcut icon" href='<%= image_path '/images/favicon.ico' %>' type="image/x-icon">

      <%= stylesheet_link_tag "reset", "global", "message", "notification", :cache => "main" %>
      <!--[if lte IE 6]>
      <link rel="stylesheet" type="text/css" href="web/s/global-ie6.css">
      <![endif]-->

      <%= javascript_include_tag "global", "ajax_form", "jquery-1.4.2", "jquery.bar", :cache => "main" %>

      <%= javascript_include_tag :defaults %>
      <%= yield :page_includes %>
  </head>
  <body>
    <div class="message-notification"><%#= flash[:error] || flash[:notice] %></div>

    <div id="layout">
        <div id="header">
            <%= link_to "Dealkat", root_path, :class => "logo" %>
            <%= link_to "Interested!", sign_up_path, :class => "sign-up" %>

            <% content_tag :ul, :class => "menu" do %>
                <%= content_tag(:li, link_to("Home", root_path) ) if request.path != root_path %>
                <%#= content_tag(:li, link_to("Benefits", benefits_path, :class => (([benefits_path].include? request.path) ? "current" : nil)) ) %>
                <%= content_tag(:li, link_to("Why?", why_path, :class => (([why_path].include? request.path) ? "current" : nil)) ) %>
                <%= content_tag(:li, link_to("Products", products_path, :class => (([products_path, tour_path, case_study_path, technology_path].include? request.path) ? "current" : nil)) ) %>
                <%= content_tag(:li, link_to("Company", company_path, :class => (([company_path, team_path, about_path, customers_path, contact_path].include? request.path) ? "current" : nil)) ) %>
                <%#= content_tag(:li, link_to("Analytics", analytics_path, :class => (([analytics_path].include? request.path) ? "current" : nil)) ) %>
            <% end%>
            <br class="clearer">
        </div><!-- #header -->
        <%= @content_for_layout %>
    </div><!-- #layout -->

    <div id="footer">
        <div class="centerer">
            <%= image_tag("RS_PoweredByLogo-blk.png", :size => "182x54", :style => "float:left") %>
            &copy; <%= Date.today.year %> 
            <%#= link_to("Company", company_path) %>
        </div>
    </div><!-- #footer -->

    <div id="popup">
        <%= render :partial => "home/tour" if request.path == tour_path %>
    </div>

    <script type="text/javascript">
        <% if flash[:error] %>
          showNotification("<%= flash.now[:error] %>", 'error');
        <% elsif flash[:notice] %>
          showNotification("<%= flash.now[:notice] %>", 'notice');
        <% end %>
        <% flash.discard %>
    </script>
    
    <script type="text/javascript" charset="utf-8">
        window._token = '<%= form_authenticity_token -%>';
    </script>

	<script type="text/javascript">
	
	var _gaq = _gaq || [];
	_gaq.push(['_setAccount', 'UA-22190205-1']);
	_gaq.push(['_trackPageview']);
	
	(function() {
	var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	})();
	
	</script>
  </body>
</html>